{% comment %}
  DIY Label Widget Block
  Allows customers to find and select nearby print shops for sustainable local printing
{% endcomment %}

<div class="diy-label-widget-container" style="margin: {{ block.settings.margin }}px 0;">
  {% if block.settings.enabled %}
    <div id="diy-label-widget-{{ product.id }}" 
         class="diy-label-widget"
         data-product-id="{{ product.id }}"
         data-shop-domain="{{ shop.permanent_domain }}"
         data-theme="{{ block.settings.theme }}"
         data-api-url="{{ block.settings.api_url | default: 'https://oval-transcript-facing-princeton.trycloudflare.com' }}"
         style="
           border: 1px solid {{ block.settings.border_color }};
           border-radius: {{ block.settings.border_radius }}px;
           padding: {{ block.settings.padding }}px;
           background: {{ block.settings.background_color }};
           font-family: {{ block.settings.font_family }};
         ">
      
      <div class="diy-label-header" style="text-align: center; margin-bottom: 20px;">
        <h3 style="
          margin: 0 0 10px 0; 
          font-size: {{ block.settings.heading_size }}px; 
          color: {{ block.settings.heading_color }};
          font-weight: 600;
        ">
          {{ block.settings.heading_text }}
        </h3>
        
        {% if block.settings.show_description %}
          <p style="
            margin: 0; 
            color: {{ block.settings.description_color }}; 
            font-size: {{ block.settings.description_size }}px;
            line-height: 1.4;
          ">
            {{ block.settings.description_text }}
          </p>
        {% endif %}
      </div>

      <div class="diy-label-loading" style="text-align: center; padding: 20px;">
        <div style="
          display: inline-block;
          padding: 12px 24px;
          background: {{ block.settings.status_bg_color }};
          border-radius: 6px;
          margin-bottom: 16px;
        ">
          <p style="
            margin: 0; 
            font-size: 14px; 
            font-weight: 500;
            color: {{ block.settings.status_text_color }};
          ">
            üìç Click "Find Print Shops" to get started
          </p>
        </div>

        <div style="margin-bottom: 20px;">
          <button 
            id="find-shops-btn-{{ product.id }}"
            class="diy-label-find-btn"
            style="
              padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 2 }}px;
              background: {{ block.settings.button_bg_color }};
              color: {{ block.settings.button_text_color }};
              border: none;
              border-radius: {{ block.settings.button_border_radius }}px;
              font-size: {{ block.settings.button_font_size }}px;
              font-weight: 600;
              cursor: pointer;
              transition: all 0.3s ease;
            "
            onmouseover="this.style.background='{{ block.settings.button_hover_color }}'"
            onmouseout="this.style.background='{{ block.settings.button_bg_color }}'"
          >
            {{ block.settings.button_text }}
          </button>
        </div>
      </div>

      <!-- Map Container -->
      <div id="map-container-{{ product.id }}" style="
        width: 100%; 
        height: {{ block.settings.map_height }}px; 
        border-radius: 8px;
        background: {{ block.settings.map_bg_color }};
        border: 1px solid {{ block.settings.border_color }};
        display: none;
        margin-bottom: 20px;
        position: relative;
        overflow: hidden;
      ">
        <div id="map-{{ product.id }}" style="
          width: 100%; 
          height: 100%; 
          border-radius: 8px;
          position: absolute;
          top: 0;
          left: 0;
        "></div>
      </div>

      <!-- Print Shops List -->
      <div id="shops-list-{{ product.id }}" style="display: none;">
        <h4 style="
          margin: 20px 0 10px 0; 
          font-size: {{ block.settings.subheading_size }}px; 
          font-weight: 600;
          color: {{ block.settings.heading_color }};
        ">
          Nearby Print Shops
        </h4>
        <div id="shops-container-{{ product.id }}"></div>
      </div>

      {% if block.settings.show_sustainability_note %}
        <div style="
          padding: 12px;
          background: {{ block.settings.sustainability_bg_color }};
          border-radius: 6px;
          margin-top: 16px;
        ">
          <p style="
            margin: 0; 
            font-size: {{ block.settings.sustainability_font_size }}px;
            color: {{ block.settings.sustainability_text_color }};
          ">
            {{ block.settings.sustainability_text }}
          </p>
        </div>
      {% endif %}
    </div>

    <!-- Load Mapbox CSS -->
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css" rel="stylesheet">
    
    <!-- Load Mapbox JS -->
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js"></script>

    <!-- DIY Label Widget Script -->
    <script>
      (function() {
        const productId = '{{ product.id }}';
        const apiUrl = '{{ block.settings.api_url | default: "https://oval-transcript-facing-princeton.trycloudflare.com" }}';
        const shopDomain = '{{ shop.permanent_domain }}';
        const theme = '{{ block.settings.theme }}';
        
        // Load the DIY Label widget script
        const script = document.createElement('script');
        script.src = apiUrl + '/widget-embed.js';
        script.async = true;
        script.onload = function() {
          if (window.DIYLabelWidget) {
            window.DIYLabelWidget.init({
              containerId: 'diy-label-widget-' + productId,
              productId: productId,
              shopDomain: shopDomain,
              theme: theme,
              apiUrl: apiUrl
            });
          }
        };
        script.onerror = function() {
          console.error('Failed to load DIY Label widget script');
          document.getElementById('diy-label-widget-' + productId).innerHTML = 
            '<p style="text-align: center; color: #d32f2f; padding: 20px;">Unable to load DIY Label widget. Please try again later.</p>';
        };
        document.head.appendChild(script);
      })();
    </script>
  {% endif %}
</div>


{% comment %}
  DIY Label Widget Block
  Can be added to any section via the theme editor
{% endcomment %}

<div class="diy-label-block" 
     style="margin: {{ block.settings.margin }}px 0; 
            padding: {{ block.settings.padding }}px;
            {% if block.settings.background_color != blank %}background-color: {{ block.settings.background_color }};{% endif %}
            {% if block.settings.border_radius > 0 %}border-radius: {{ block.settings.border_radius }}px;{% endif %}
            {% if block.settings.show_border %}border: 1px solid #e1e1e1;{% endif %}">
  
  {% if block.settings.show_title %}
    <h3 style="margin: 0 0 16px 0; 
               color: {{ block.settings.title_color }};
               font-size: {{ block.settings.title_size }}px;
               text-align: {{ block.settings.title_alignment }};">
      {{ block.settings.title | default: "ðŸŒ± Choose Local Printing" }}
    </h3>
  {% endif %}
  
  {% if block.settings.show_description %}
    <p style="margin: 0 0 20px 0; 
              color: {{ block.settings.description_color }};
              text-align: {{ block.settings.description_alignment }};">
      {{ block.settings.description | default: "Support your local community and reduce shipping impact by printing this item at a nearby shop." }}
    </p>
  {% endif %}
  
  <div id="diy-label-widget-block-{{ block.id }}" 
       data-product-id="{% if product %}{{ product.id }}{% endif %}"
       data-shop-domain="{{ shop.permanent_domain }}"
       data-theme="{{ block.settings.theme }}"
       data-radius="{{ block.settings.search_radius }}"
       data-api-url="{{ block.settings.api_url | default: 'https://increasing-exercise-calculation-yo.trycloudflare.com' }}"
       style="min-height: {{ block.settings.widget_height }}px;">
    
    <div class="diy-label-loading" style="text-align: center; padding: 40px 20px;">
      <div style="display: inline-block; 
                  padding: 12px 24px; 
                  background: {{ block.settings.loading_bg_color }}; 
                  border-radius: 6px;">
        <p style="margin: 0; color: {{ block.settings.loading_text_color }};">
          ðŸŒ± Loading local printing options...
        </p>
      </div>
    </div>
  </div>
</div>

<script>
(function() {
  const blockId = '{{ block.id }}';
  const widgetElement = document.getElementById('diy-label-widget-block-' + blockId);
  
  if (!widgetElement) return;
  
  const productId = widgetElement.getAttribute('data-product-id');
  const shopDomain = widgetElement.getAttribute('data-shop-domain');
  const theme = widgetElement.getAttribute('data-theme');
  const radius = widgetElement.getAttribute('data-radius');
  const apiUrl = widgetElement.getAttribute('data-api-url');
  
  // Only proceed if we have a product ID (i.e., we're on a product page)
  if (!productId) {
    widgetElement.innerHTML = `
      <div style="text-align: center; padding: 20px; color: #666;">
        <p>DIY Label widget is only available on product pages.</p>
      </div>
    `;
    return;
  }
  
  // Function to check if DIY Label is enabled for this product
  async function checkProductSettings() {
    try {
      const response = await fetch(
        `${apiUrl}/api/product-settings?shop=${encodeURIComponent(shopDomain)}&product=${encodeURIComponent(productId)}`
      );
      
      if (!response.ok) return false;
      
      const data = await response.json();
      return data.enabled || false;
    } catch (error) {
      console.error('DIY Label: Error checking product settings:', error);
      return false;
    }
  }
  
  // Function to load the widget iframe
  function loadWidget() {
    const iframe = document.createElement('iframe');
    iframe.src = `${apiUrl}/widget?` + 
      `shop=${encodeURIComponent(shopDomain)}&` +
      `product=${encodeURIComponent(productId)}&` +
      `theme=${encodeURIComponent(theme)}`;
    
    iframe.style.cssText = `
      width: 100%;
      height: {{ block.settings.widget_height }}px;
      border: none;
      border-radius: {{ block.settings.border_radius }}px;
      background: transparent;
    `;
    iframe.frameBorder = '0';
    iframe.loading = 'lazy';
    
    // Handle iframe messages
    window.addEventListener('message', function(event) {
      if (event.origin !== apiUrl) return;
      
      if (event.data.type === 'diy-label-resize') {
        iframe.style.height = Math.max({{ block.settings.widget_height }}, event.data.height) + 'px';
      }
      
      if (event.data.type === 'diy-label-selection') {
        console.log('DIY Label: Print shop selected:', event.data.printShop);
        
        // Dispatch custom event
        const customEvent = new CustomEvent('diyLabelSelection', {
          detail: {
            printShop: event.data.printShop,
            productId: productId,
            blockId: blockId
          }
        });
        document.dispatchEvent(customEvent);
      }
    });
    
    // Replace loading content with iframe
    widgetElement.innerHTML = '';
    widgetElement.appendChild(iframe);
  }
  
  // Initialize the widget
  async function initializeWidget() {
    {% unless block.settings.show_on_all_products %}
    // Check if DIY Label is enabled for this product
    const isEnabled = await checkProductSettings();
    if (!isEnabled) {
      widgetElement.style.display = 'none';
      return;
    }
    {% endunless %}
    
    loadWidget();
  }
  
  // Start initialization
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeWidget);
  } else {
    initializeWidget();
  }
})();
</script>

